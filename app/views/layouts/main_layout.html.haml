!!!
%html
	%head
		%title радиодетали
		= stylesheet_link_tag 'cupertino/jquery-ui-1.8.16.custom.css', 'bootstrap', 'layout'
		= javascript_include_tag :defaults
		= csrf_meta_tag
	%body
		#content
			= image_tag 'logo.png', :style=>'float:left; width:300px; margin-top:10px; '
			%ul#top-link
				%li
					= image_tag 'lock.png'
					= link_to 'Регистрация', root_path
					= link_to '/', '#', :id=>'enter-space'
					= link_to 'Вход', root_path
				%li
					= image_tag 'shopcart.png'
					= link_to 'Корзина', root_path
			.clear
			#find
				.field
					%input
				= link_to 'Поиск', root_path
			.row
				.span5
					%ul#main-menu
						%li
							= link_to Page.find(1).name, root_path
						%li
							= link_to 'ТОВАРЫ', root_path
						%ul#main-menu
							- Menu.roots.order('lft').each do |m_root|
								%li
									= link_to m_root.name, root_path
								%ul#main-menu
									- m_root.children.each do |m_child|
										%li
											= link_to m_child.name, root_path
									- m_root.products.each do |p_root|
										%li
											= link_to p_root.name, root_path, :class=>'product'
						- Page.where('id != 1').each do |page|
							%li
								= link_to page.name, page_path(page)
				.span12
					%h2.title Новые товары
					- Product.where(:visible=>true).order('created_at DESC').limit(3).each do |pr|
						= link_to(product_path(pr), :class=>'rowbottom') do
							= image_tag pr.images.first.photo.url(:thumb) if pr.images != []
							.prod-name= truncate(pr.name, :length=>20, :ommission=>'...')
							.prod-info= truncate(pr.info, :length=>50, :ommission=>'...')
					.clear
					.info
						= yield
			#layout_footer
		#footer
			%p
				%a{:href=>'http://yuliansait.ru'} разработчик юлиансайт.рф
