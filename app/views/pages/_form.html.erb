<%= javascript_include_tag :ckeditor %>
<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="margin-top:20px;">
    <%= f.label 'Название страницы', :style=>'width:200px;margin:5px 20px auto auto;display:block;' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Заголовок', :style=>'width:200px;margin:20px 20px auto auto;display:block;' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label 'Содержание', :style=>'width:200px;margin:20px 20px auto auto;display:block;' %><br /><br /><br />
    <%= cktext_area(:page, :body, :input_html => {:cols => 10, :rows => 20}, :toolbar => 'Easy') %>
  </div>
  <div class="actions">
    <%= f.submit 'сохранить'%>
  </div>
<% end %>
